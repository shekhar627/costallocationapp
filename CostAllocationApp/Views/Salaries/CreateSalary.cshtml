@model CostAllocationApp.ViewModels.SalaryViewModel
@{
    ViewBag.Title = "Grade Salary Type Registration";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="/Content/common.css" />
    <link rel="stylesheet" type="text/css" href="/Content/salaries.css" />
}
    <div class="content container-fluid">



        <div class="modal-content" id="salary_body">
            <div class="modal-body">
                <form>
                    <div id="main-div">
                        <div class="row">
                            <div class="col-4 module-label-txt">
                                <label for="salary_year">Year <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <select class="form-control" id="salary_year">
                                        <option value="">select one</option>
                                        <option value="2022">2022</option>
                                    </select>
                                    <div class="salary_year_err">
                                        Select Year
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4 module-label-txt">
                                <label for="salary_salaryType">Salary Types <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <select class="form-control" id="salary_salaryType"></select>
                                    <div class="salary_salaryType_err">
                                        Select Salary Type
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4 module-label-txt">
                                <label for="salary_department">Departments <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <select class="form-control" id="salary_department"></select>
                                    <div class="salary_department_name_err">
                                        Select Department
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-4 module-label-txt">
                                <label for="salary_gradeId">Grades <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <select class="form-control" id="salary_gradeId"></select>
                                    <div class="salary_gradeId_name_err">
                                        Select Grade
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4 module-label-txt">
                                <label for="salary_salaryType">Amount <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <input type="number" class="form-control" id="salary_beginning" />
                                    <div class="salary_beginning_name_err">
                                        Enter Beginning Target
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <input type="number" class="form-control" id="salary_revision" />
                                    <div class="salary_revision_name_err">
                                        Enter Downward Revision target
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="row">
                        <div class="custom_button_group_salary">
                            <a href="javascript:void(0);" id="salary_cancel">Cancel</a>
                            <a href="javascript:void(0);" id="salary_registration" onclick="CreateGradeSalaryType();">Create</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>



