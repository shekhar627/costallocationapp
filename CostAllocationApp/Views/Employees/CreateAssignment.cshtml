                        .done(function (data) {
                            $('#section_edit').empty();
                            $('#section_edit').append(`<option value=''>Select Section</option>`);
                            $.each(data, function (key, item) {
                                if (item.Id == assignmentData.SectionId) {
                                    $('#section_edit').append(`<option value='${item.Id}' selected>${item.SectionName}</option>`);
                                }
